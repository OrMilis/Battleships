<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_centerHorizontal="true"
    android:layout_gravity="center"
    android:gravity="center"
    android:background="@color/colorBackground"
    tools:context="com.example.ormil.battleships.LeaderboardScreen">

    <fragment class="com.example.ormil.battleships.LeaderboardListFragment"
        android:id="@+id/leaderboard_listFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.74">

    </fragment>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.01"
        android:background="@color/colorListItemText"/>

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"/>

</LinearLayout>
